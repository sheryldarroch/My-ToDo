extends layout

block content
  .main.container-fluid.bg-info.text-sm-center.py-2
    .row
      .col-md-8.mx-auto
        h1.mb-2 Welcome to My ToDo List!
          img.img-fluid.avatar.mx-auto.my-4.d-block(src="/images/user.png" alt="avatar")
          h1.text-white #{name}

          h2.mt-4 ToDo Lists
          if todolists
            -`let todolists = #{todolists}`
            ul.myLists.list-group
              each todolist in todolists
                li(id=`${todolist._id}`).list-group-item.list-group-item-action
                  a(href='#')= todolist.todoListName
          a.btn.btn-outline-dark.btn-lg.my-1(href='/todo') Create a ToDo List
